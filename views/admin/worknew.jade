block content-here
	div.main-header
		-if (!edit)
			h2 Create a new Work
		-else
			h2 Edit this Work
		em Show your project info here.
	div.main-content
		div.row
			div.col-md-6
				div.widget
					div.widget-header
						h3
							i.fa.fa-tags
							| Work form
					div.widget-content
						-if (!edit){ edit= {_id:"new",title:"",shortname:"",content:"",tag_id:[],author_id:"",shortname:""} }
						form(method="post",action="/admin/work/#{edit._id}")
							div.form-group
								label Title
								input.form-control.parsley-validated(name="title",type="text",value="#{edit.title}",required)
							div.form-group
								label Short Name
								input.form-control.parsley-validated(name="shortname",type="text",value="#{edit.shortname}",placeholder="http://www.giccoo.com/work/:short_name",required)
							div.form-group
								p 
									label Tag 
								select#tagid.multiselect(name="tagid[]",multiple="multiple",title="请选择",required)
									-for(var i=0;i<taglist.length;i++)
										-var isselect = false
										-for (var j=0;j<edit.tag_id.length;j++)
											-if (edit.tag_id[j] == taglist[i]._id) {isselect = "true"}
										-if (isselect == "true")
											option(value="#{taglist[i]._id}",selected) #{taglist[i].name}
										-else
											option(value="#{taglist[i]._id}") #{taglist[i].name}
							div.form-group
								label Description
								include editor-btn
								textarea#editor.form-control(name="editor",rows="5",cols="30",required) #{edit.content}
							div.form-group
								label Author
								div
									img(src="#{avatar}")
							div.form-group
								button.btn.btn-primary(type="submit") Submit
								button.btn.btn-default(type="reset") Reset
			div.col-md-6
				div.widget
					div.widget-header
						h3
							i.fa.fa-tags
							| Work Preview
					div.widget-content
						div.blog-title
							h1#title
							p.info 2014-03-16 08:22
							div.author
								img(src="#{avatar}")
							hr
						include preview

block css
	link(href="/css/admin/codemirror.css",media="all",rel="stylesheet",type="text/css")
block thisPageScript
	-var pagejs = ['js/vendor/codemirror.js','js/vendor/showdown.js','js/vendor/codemode/markdown.js','assets/js/bootstrap-multiselect.js','assets/js/parsley.min.js']
	-for(var mn=0;mn<pagejs.length;mn++)
		script(src="/#{pagejs[mn]}",type="text/javascript")
block thisPageJs 

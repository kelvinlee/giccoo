div(class="modal fade",id="getfiles",tabindex="-1",role="dialog",aria-labelledby="myModalLabel",aria-hidden="true")
	div.modal-dialog
		div.modal-content
			div.modal-header
				button.close(type="button",data-dismiss="modal",aria-hidden="true") &times;
				h4#myModalLabel.modal-title Select Files
			div.modal-body
				div#files.files-list
					div.input-group.input-group-lg
						input.form-control(type="search",placeholder="enter a search file name")
						span.input-group-btn.search
							button.btn.btn-primary(type="button")
								i.fa.fa-search
								| Search
					div.list-group.king-gallery.files-list-o
						-for (var i=0;i<files.length;i++)
							div.item.col-md-6.col-sm-6
								div.thumbnail
									img.list-group-image(src="/uploadDir/#{userid}/#{files[i]}")
									div.caption
										h3.inner.list-group-item-heading #{files[i]}
										ul.list-unstyled
											li
												strong Path:
												em  /uploadDir/#{userid}/#{files[i]}
											//- li
												strong File Size:
												em 139KB
										div.action-buttons
											a.btn.btn-primary.editor-images.btn-xs(href="javascript:void(0)",data-name="#{files[i]}",data-src="/uploadDir/#{userid}/#{files[i]}")
												i.fa.add
												|  Insert
											//- a.btn.btn-danger.btn-xs(href="/admin/files-remove/:files_name")
												i.fa.trash-o
												|Rmove
			div.modal-footer
				button.btn.btn-default(type="button",data-dismiss="modal")
					i.fa.fa-times-circle
					| Close

